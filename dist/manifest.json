{
  "manifest_version": 3,
  "name": "prompts.chat",
  "version": "1.0.0.0",
  "version_name": "1.0.0",
  "icons": {
    "16": "prompts-chat-logo-16.png",
    "48": "prompts-chat-logo-48.png",
    "128": "prompts-chat-logo-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "prompts-chat-logo-16.png",
      "48": "prompts-chat-logo-48.png",
      "128": "prompts-chat-logo-128.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab",
    "tabs",
    "sidePanel"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/content-script.ts-loader-BFHWiJN-.js"
      ],
      "matches": [
        "https://github.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://www.perplexity.ai/*",
        "https://gemini.google.com/*",
        "https://chat.mistral.ai/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "host_permissions": [
    "https://github.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://www.perplexity.ai/*",
    "https://gemini.google.com/*",
    "https://chat.mistral.ai/*"
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": false
    },
    {
      "matches": [
        "https://chat.mistral.ai/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://gemini.google.com/*",
        "https://github.com/*",
        "https://www.perplexity.ai/*"
      ],
      "resources": [
        "assets/content-script.ts-BzXFfyo0.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
